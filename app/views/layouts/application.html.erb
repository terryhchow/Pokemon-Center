<!DOCTYPE html>
<html>
  <head>
    <title>PokemonCenter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <!-- application.html.erb -->
    <script type="text/javascript">
      window.cart_icon = "<%= image_url('cart_icon.png') %>";
      window.pikachu_banner = "<%= image_url('pikachu_banner.png') %>";
      window.starter_banner = "<%= image_url('starter_pokemon_banner.png') %>";
      window.pokemon_logo = "<%= image_url('pokemon_logo.png') %>";
      window.sign_in_icon = "<%= image_url('sign_in_icon.png') %>";
      window.prod6 = "<%= image_url('sign_in_icon.png') %>";
      window.prod7 = "<%= image_url('product_images/prod2.png') %>";
      window.prod8 = "<%= image_url('product_images/prod3.png') %>";
      window.prod9 = "<%= image_url('product_images/prod4.png') %>";
      window.prod10 = "<%= image_url('product_images/prod5.png') %>";

    </script>

    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "name": "<%= current_user.name %>",
          "address": "<%= current_user.address %>"
          };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
