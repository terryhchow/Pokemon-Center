<!DOCTYPE html>
<html>
  <head>
    <title>PokemonCenter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          "name": "<%= current_user.name %>",
          "address": "<%= current_user.address %>",
          };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
